<template id="template_stock_report">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <div class="page">
                <table class="table table-condensed" style="text-align:center;font-size:9px">
                    <tr>
                        <td width="30%" align="center" valign="middle" style="border: 1px solid white;">
                            <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" style="max-height: 90px;height: auto;"/>
                        </td>
                        <td colspan="2" width="40%" align="center" valign="top" style="border: 1px solid white;">
                            <h1><span>Devolucion, Quejas e Incidencias</span></h1>
                        </td>
                        <td colspan="2" width="40%" align="center" valign="top" style="border: 1px solid white;">
                            <h1><span t-field="o.name"/></h1>
                        </td>
                    </tr>
                </table>
            </div>
            <BR/>
            <BR/>
            <div class="row">
                <table class="table">
                    <tr style="border: 1px solid gray;">
                        <td style="width:20%;padding:2px;padding-left: 9px;"><strong>Empresa:</strong></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;"><span t-field="o.partner_id.name"/></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;"><strong>Fecha prevista:</strong></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;"><span t-field="o.scheduled_date"/></td>
                    </tr>
                    <BR/>
                    <tr style="border: 1px solid gray;">
                        <td style="width:20%;padding:2px;padding-left: 9px;"><strong>Tipo de operacion:</strong></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;"><span t-field="o.picking_type_id.name"/></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;"><strong>Fecha efectiva:</strong></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;"><span t-field="o.date_done"/></td>
                    </tr>
                    <BR/>
                    <tr style="border: 1px solid gray;">
                        <td style="width:20%;padding:2px;padding-left: 9px;"><strong>Documento origen:</strong></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;"><span t-field="o.origin"/></td>
                    </tr>
                </table>
            </div>
            <BR/>
            <div class="row">
                <table class="table" style="text-align:center;">
                    <tr style="border: 1px solid gray;">
                        <td style="width:20%;padding:2px;padding-right: 9px;"><strong>Nota de credito</strong></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;"><strong>Cambio fisico</strong></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;"><strong>Incidencia</strong></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;"><strong>Paqueteria</strong></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;"><strong>Devolucion</strong></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;"><strong>Refacturacion</strong></td>
                    </tr>
                    <tr>
                        <td style="width:20%;padding:2px;padding-right: 9px;border: 1px solid gray;"><span style="color: white;">........<BR/>........<BR/>........</span></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;border: 1px solid gray;"><span style="color: white;">........<BR/>........<BR/>........</span></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;border: 1px solid gray;"><span style="color: white;">........<BR/>........<BR/>........</span></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;border: 1px solid gray;"><span style="color: white;">........<BR/>........<BR/>........</span></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;border: 1px solid gray;"><span style="color: white;">........<BR/>........<BR/>........</span></td>
                        <td style="width:20%;padding:2px;padding-right: 9px;border: 1px solid gray;"><span style="color: white;">........<BR/>........<BR/>........</span></td>
                    </tr>
                </table>
            </div>
            <BR/>
            <BR/>
            <div class="row mb32 mt32">
            <div class="col-3 text-left">
            <div style="width: 95%; overflow: auto; font-size: 13px; color: #1a1a1a;background-color: #dddddd;border: 1px solid gray;" >
                <strong>
                <div style="width:20%;padding:2px;padding-left: 9px;float:left; text-align: center;">Producto</div>
                <div style="text-align: center">Demanda inicial</div>
                <div style="float:right; text-align: center">Hecho</div>
                </strong>
            </div>
            <t t-foreach="o.move_ids_without_package" t-as="l">
                <div style="float: left; width: 95%; overflow: auto; font-size: 13px; color: #1a1a1a;border: 1px solid gray;" >
                    <div style="width:20%;padding:2px;padding-left: 9px;float:left; text-align: center"><span t-field="l.product_id.name"/></div>
                    <div style="text-align: center"><span t-field="l.product_uom_qty"/></div>
                    <div style="float:right; text-align: center"><span t-field="l.quantity_done"/></div>
                </div>
            </t>
            </div>
            </div>
            <BR/>
            <BR/>
            <BR/>
            <BR/>
            <div style="border: 1px solid gray;text-align: left"><strong>Descripcion de incidencia:</strong>
            <BR/>
