<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_purchaseorder_document_custom"  inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//div[@class='page']" position="replace">
                <div class="page" style="font-family: Arial;">
               <div class="oe_structure"/>
            <div class="row">
                <div class="col-xs-6">
                    <strong>Direccion de Envio:</strong>
                    <div t-if="o.dest_address_id">
                        <div t-field="o.dest_address_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>

                    <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
                        <span t-field="o.picking_type_id.warehouse_id.name"/>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                    </div>
                </div>
                <div class="col-xs-5" style="background: #000">
                    <strong>Proveedor:</strong>
                    <div t-field="o.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></p>
                </div>
            </div>

            <h2 t-if="o.state != 'draft'">Confirmacion de Orden de Compra #<span t-field="o.name"/></h2>
            <h2 t-if="o.state == 'draft'">Solicitud de Presupuesto #<span t-field="o.name"/></h2>

            <div class="row mt32 mb32">
                <div t-if="o.name" class="col-xs-3">
                    <strong>Referencia de Pedido:</strong>
                    <p t-field="o.name"/>
                </div>
                <div t-if="o.partner_ref" class="col-xs-3">
                    <strong>Your Order Reference:</strong>
                    <p t-field="o.partner_ref"/>
                </div>
                <div t-if="o.date_order" class="col-xs-3">
                    <strong>Fecha de Pedido:</strong>
                    <p t-field="o.date_order"/>
                </div>
            </div>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th><strong>Descripcion</strong></th>
                        <th><strong>Impuestos</strong></th>
                        <th class="text-center"><strong>Fecha de Pedido</strong></th>
                        <th class="text-right"><strong>Cantidad</strong></th>
                        <th class="text-right"><strong>Precio Unitario</strong></th>
                        <th class="text-right"><strong>Subtotal</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td>
                            <span t-field="line.name"/>
                        </td>
                        <td>
                            <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                        </td>
                        <td class="text-center">
                            <span t-field="line.date_planned"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.product_qty"/>
                            <span t-field="line.product_uom.name" groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_subtotal"
                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Subtotal</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Impuestos</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_total"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
 
            <div>
                <div class="col-xs-4" style="border-top: 1px solid">
                    <table>
                        <tr>
                            <th>Autorizacion</th>
                        </tr>
                    </table>   
                </div>
             </div> 

            <div class="col-xs-4">
               <table>
                    <tr></tr>
                </table> 
            </div>
            <div>
                <div class="col-xs-4" style="text-center; border-top: 1px solid">
                    <table>
                        <tr>
                            <th>Visto bueno</th>
                        </tr>
                    </table>   
                </div>
             </div>


            <p t-field="o.notes"/>
<div class="oe_structure"/>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
