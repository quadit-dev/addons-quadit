<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="quadit_mrp_report" inherit_id="mrp.report_mrporder">
    <xpath expr="//div[@class='page']/div[3]/div[3]" position="after">
            <div class="col-3">
                <strong>Descripcion</strong><br/>
                <span t-field="o.sale_line_id"/>
            </div>
    </xpath>

    <xpath expr="//table/thead/tr/th[5]" position="after">
            <th>
                <strong>Observaciones</strong>

            </th>       
    </xpath>

    <xpath expr="//table/tbody/t/tr[2]/td[5]" position="after">
        <td>
            <t>
                <span t-esc="line.bom_line_id.notes"/>
            </t>
        </td>
   </xpath>
</template>
</odoo>
